# Human Farm Environment Variables
# Copy this file to .env.local and fill in your values

# ===================
# Core Configuration
# ===================
JWT_SECRET=your-jwt-secret-change-in-production

# ===================
# Supabase
# ===================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===================
# Twitter/X API
# ===================
# Bearer token for reading tweets
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# OAuth 2.0 credentials (for Twitter account linking)
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# ===================
# OpenAI (for content scoring)
# ===================
OPENAI_API_KEY=your-openai-api-key

# ===================
# ActiveCampaign (Email Automation)
# ===================
# Your ActiveCampaign API URL (e.g., https://youraccountname.api-us1.com)
ACTIVECAMPAIGN_API_URL=https://youraccountname.api-us1.com

# Your ActiveCampaign API Key (found in Settings > Developer)
ACTIVECAMPAIGN_API_KEY=your-api-key

# The ID of your "Human Farm - Grow" list in ActiveCampaign
ACTIVECAMPAIGN_LIST_ID=1

# Optional: Custom field IDs (will auto-create if not set)
# AC_FIELD_REFERRAL_LINK=
# AC_FIELD_REFERRAL_COUNT=
# AC_FIELD_USER_ID=
# AC_FIELD_REFERRAL_CODE=

# Email Verification custom fields (will auto-create if not set)
# AC_FIELD_VERIFICATION_TOKEN=
# AC_FIELD_VERIFICATION_LINK=

# Optional: Tag names (if different from defaults)
# AC_TAG_NO_REFERRALS=hf-no-referrals
# AC_TAG_HAS_REFERRALS=hf-has-referrals
# AC_TAG_NODE_1=hf-node-1
# AC_TAG_NODE_2=hf-node-2
# AC_TAG_NODE_3=hf-node-3
# AC_TAG_NODE_4=hf-node-4
# AC_TAG_ACTIVE_POSTER=hf-active-poster
# AC_TAG_NEEDS_VERIFICATION=hf-needs-verification
# AC_TAG_EMAIL_VERIFIED=hf-email-verified

# ===================
# Application URLs
# ===================
# The public URL of your app (used for verification links, OAuth callbacks)
NEXT_PUBLIC_APP_URL=https://humanfarm.ai

# ===================
# Blockchain Configuration
# ===================
# Set to 'true' for testnet (Base Sepolia), 'false' for mainnet (Base)
NEXT_PUBLIC_USE_TESTNET=false

# ===================
# Admin Dashboard
# ===================
# Secret password for accessing /admin dashboard
ADMIN_SECRET=your-secure-admin-password

# ===================
# Environment
# ===================
# 'development' | 'staging' | 'production'
NODE_ENV=production
